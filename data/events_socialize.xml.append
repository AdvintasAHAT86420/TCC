		<event name="SOCIALIZE_TRASH_EATER_GENERIC_1"/>
		<event name="SOCIALIZE_TRASH_EATER_GENERIC_2"/>
		<event name="SOCIALIZE_TRASH_EATER_GENERIC_3"/>
